<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".feature.category.KgcTeamFragment"
    android:background="@color/white"
    >


    <TextView
        android:id="@+id/tv_kgc_team_information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="구단 정보"
        android:textSize="20sp"
        android:fontFamily="@font/font_nanumsquare_bold"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <Button
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/baseline_arrow_back_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="332dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/ic_star_top"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="90dp"
        android:background="@drawable/ic_team_redboosters"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="260dp"
        android:layout_height="70dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="92dp"
        android:src="@drawable/bg_slide_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_kgc_team_real"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="안양 정관장"
        android:textSize="17sp"
        android:fontFamily="@font/font_nanumsquare_bold"
        android:layout_marginStart="25dp"
        android:layout_marginTop="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/kgc_team_match_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="112dp"
        android:layout_marginLeft="125dp"
        android:text="경기 진행 중"
        android:textSize="9sp"
        android:fontFamily="@font/font_nanumsquare_bold"
        android:textColor="#9D0000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="@id/tv_kgc_team_match_time"
        android:layout_marginRight="2dp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:text="농구 / KBL"
        android:textSize="12sp"
        android:fontFamily="@font/font_nanumsquare_regular"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/kgc_team_match_with"

        />

    <TextView
        android:id="@+id/kgc_team_match_with"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:text="안양 정관장 vs 부산 KCC"
        android:fontFamily="@font/font_nanumsquare_bold"
        android:layout_marginStart="183dp"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:id="@+id/tv_kgc_team_match_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:layout_marginStart="127dp"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:text="19:00"
        android:fontFamily="@font/font_nanumsquare_bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        />

    <TextView
        android:id="@+id/tv_kgc_team_schedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="경기 일정"
        android:textSize="20sp"
        android:fontFamily="@font/font_nanumsquare_bold"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/tv_kgc_team_real"
        app:layout_constraintStart_toStartOf="parent"
        />

    <ImageView
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        app:layout_constraintTop_toBottomOf="@id/tv_kgc_team_schedule"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:src="@drawable/bg_gray_line_thick"
        />


    <ImageView
        android:id="@+id/iv_kgc_team_schedule"
        android:layout_width="350dp"
        android:layout_height="90dp"
        android:layout_marginTop="7dp"
        android:src="@drawable/bg_slide_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line1"
        />

    <ImageView
        android:id="@+id/iv_kgc_team_schedule2"
        android:layout_width="340dp"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"

        android:src="@drawable/img_match_schedule"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_kgc_team_schedule"
        />






    <TextView
        android:id="@+id/tv_kgc_team_players"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"

        android:text="선수단"
        android:textSize="20sp"
        android:fontFamily="@font/font_nanumsquare_bold"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/iv_kgc_team_schedule"
        app:layout_constraintStart_toStartOf="parent"
        />

    <ImageView
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        app:layout_constraintTop_toBottomOf="@id/tv_kgc_team_players"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:src="@drawable/bg_gray_line_thick"
        />



    <ImageView
        android:id="@+id/iv_kgc_player"
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:src="@drawable/img_player_list2"
        android:layout_marginTop="7dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line2"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <ImageView
        android:id="@+id/iv_kgc_player2"
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:src="@drawable/img_player_list2"
        android:layout_marginTop="7dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_kgc_player"
        app:layout_constraintEnd_toEndOf="parent"
        />


    <TextView
        android:id="@+id/tv_kgc_team_recent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"

        android:text="구단 소식"
        android:textSize="20sp"
        android:fontFamily="@font/font_nanumsquare_bold"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/iv_kgc_player2"
        app:layout_constraintStart_toStartOf="parent"
        />

    <ImageView
        android:id="@+id/line3"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        app:layout_constraintTop_toBottomOf="@id/tv_kgc_team_recent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:src="@drawable/bg_gray_line_thick"
        />

    <TextView
        android:id="@+id/tv_kgc_recent_news1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="프로농구 소노, 정관장에서 조은후 영입…김세창과 트레이드"
        app:layout_constraintTop_toBottomOf="@id/line3"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="40dp"
        />

    <TextView
        android:id="@+id/tv_kgc_recent_news2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="'13분 12점' 정관장 김경원, 상대 에이스 이정현의 칭찬..."
        app:layout_constraintTop_toBottomOf="@id/tv_kgc_recent_news1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="40dp"
        />

    <TextView
        android:id="@+id/tv_kgc_recent_news3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="‘복귀한 스펠맨의 3점’ 짙게 남는 아쉬움, 김상식 감독 “숨..."
        app:layout_constraintTop_toBottomOf="@id/tv_kgc_recent_news2"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="40dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>