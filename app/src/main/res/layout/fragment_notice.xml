<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".feature.notice.NoticeFragment"
    android:background="@color/white"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="알림"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:fontFamily="@font/font_nanumsquare_bold"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <Button
        android:id="@+id/btn_notice_back"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/baseline_arrow_back_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_notice_bg"
        android:layout_width="370dp"
        android:layout_height="600dp"
        android:src="@drawable/bg_postbackground"
        android:layout_marginTop="95dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/tv_notice_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:fontFamily="@font/font_nanumsquare_bold"
        android:textColor="@color/black"
        android:text="page 1"
        android:elevation="5dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/iv_notice_bg"
        android:layout_marginBottom="20dp"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_board_title_next"
        android:elevation="5dp"

        app:layout_constraintStart_toEndOf="@id/tv_notice_page"
        android:layout_marginStart="22dp"
        app:layout_constraintTop_toTopOf="@id/tv_notice_page"
        app:layout_constraintBottom_toBottomOf="@id/tv_notice_page"
        />

    <LinearLayout
        android:id="@+id/ll_notice_1"
        android:layout_width="match_parent"
        android:layout_height="58dp"

        app:layout_constraintTop_toTopOf="@id/iv_notice_bg"
        android:layout_marginTop="18dp"
        android:layout_marginHorizontal="40dp"
        android:orientation="horizontal"
        >
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/font_nanumsquare_regular"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:text="[축구 게시판] '명가의 몰락' 답댓글"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="1시간 전"
            android:textAlignment="textEnd"
            tools:ignore="RtlCompat" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_notice_2"
        android:layout_width="match_parent"
        android:layout_height="58dp"

        app:layout_constraintTop_toBottomOf="@id/ll_notice_1"
        android:layout_marginHorizontal="40dp"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/font_nanumsquare_regular"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:text="[서울 FC] 새롭게 추가된 기사"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="1시간 전"
            android:textAlignment="textEnd"
            tools:ignore="RtlCompat" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_notice_3"
        android:layout_width="match_parent"
        android:layout_height="58dp"

        app:layout_constraintTop_toBottomOf="@id/ll_notice_2"
        android:layout_marginHorizontal="40dp"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/font_nanumsquare_regular"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:text="[안양 정관장] 오늘 19:00 경기 일정"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="5시간 전"
            android:textAlignment="textEnd"
            tools:ignore="RtlCompat" />
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>