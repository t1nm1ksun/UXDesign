<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="18dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_board_title_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:fontFamily="@font/font_nanumsquare_bold"
        android:text="게시글 제목"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/tv_board_title_item_when"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#535353"
        android:textSize="13sp"
        android:fontFamily="@font/nanumsquare_regular"
        android:text="11/28 오후 5:45"

        app:layout_constraintTop_toBottomOf="@id/tv_board_title_item_title"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="5dp"
        />

    <TextView
        android:id="@+id/tv_board_title_item_writer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:fontFamily="@font/font_nanumsquare_bold"
        android:text="작성자"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_board_title_item_title"
        />

</androidx.constraintlayout.widget.ConstraintLayout>