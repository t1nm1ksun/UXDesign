<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="게시글"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:fontFamily="@font/font_nanumsquare_bold"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <Button
        android:id="@+id/btn_post_back"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/baseline_arrow_back_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:layout_width="370dp"
        android:layout_height="680dp"
        android:src="@drawable/bg_postbackground"
        android:layout_marginTop="95dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


    <TextView
        android:id="@+id/tv_post_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="게시글 제목"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:fontFamily="@font/font_nanumsquare_bold"
        android:layout_marginStart="40dp"
        android:layout_marginTop="120dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/tv_post_writer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/font_nanumsquare_bold"
        android:text="작성자"
        android:textColor="@color/black"

        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginStart="40dp"
        android:layout_marginTop="165dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/tv_post_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/font_nanumsquare_bold"
        android:text="작성 일자 및 시간"
        android:textSize="13sp"
        android:layout_marginStart="105dp"
        android:layout_marginTop="172dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/font_nanumsquare_bold"
        android:text="댓글 12 좋아요 54"
        android:textSize="13sp"
        android:layout_marginStart="280dp"
        android:layout_marginTop="185dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <ImageView
        android:layout_width="350dp"
        android:layout_height="4dp"
        android:layout_marginTop="210dp"
        android:src="@drawable/bg_gray_line_thick"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <ScrollView
        android:id="@+id/sv_post_content"
        android:layout_width="300dp"
        android:layout_height="350dp"
        android:layout_marginTop="240dp"
        android:scrollbars="vertical"
        android:scrollbarSize="3dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:id="@+id/tv_post_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_nanumsquare_bold"
            android:lineSpacingExtra="4dp"
            android:text="2016년까지만 해도 서울,수원이 k리그의 상위권 팀으로써 세계 7대 슈퍼 매치로 명가의 라이벌 매치였는데, 수원은 강등위기에 서울은 하위리그에 상주하면서 망해버렸네
\n\n수원은 k리그에서 살아남을 수 있을까?
그래서 수원과 서울은 다시 슈퍼 매치를 할 수 있을까??
보고싶다!!"
            />
    </ScrollView>


    <ImageView
        android:layout_width="350dp"
        android:layout_height="4dp"
        android:layout_marginTop="600dp"
        android:src="@drawable/bg_gray_line_thick"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <ImageView
        android:layout_width="350dp"
        android:layout_height="4dp"
        android:layout_marginTop="680dp"
        android:src="@drawable/bg_gray_line_thick"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="댓글"
        android:textSize="16sp"
        android:fontFamily="@font/font_nanumsquare_bold"
        android:textColor="@color/black"
        android:layout_marginStart="40dp"
        android:layout_marginTop="615dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <ImageView
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:layout_marginTop="640dp"
        android:layout_marginStart="40dp"
        android:src="@drawable/ic_circle_stroke"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <EditText
        android:layout_width="250dp"
        android:layout_height="25dp"
        android:layout_marginTop="645dp"
        android:layout_marginStart="100dp"
        android:paddingStart="20dp"
        android:background="@drawable/bg_gray_rec_stroke_radius"
        android:textSize="13sp"
        android:fontFamily="@font/font_nanumsquare_bold"
        android:hint="댓글 작성..."
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />

    <ScrollView
        android:id="@+id/sv_post_comment"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_marginTop="690dp"
        android:scrollbars="vertical"
        android:scrollbarSize="3dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="사용자1\n사용자1 되겠냐 ㅋㅋ\n---------------------------------------------------------------------------
            \n사용자2\n사용자2 나도 보고 싶다\n---------------------------------------------------------------------------
            \n사용자3\n사용자3 기대 중~\n---------------------------------------------------------------------------
            \n사용자4\n사용자4 어떻게 될까"
            app:layout_constraintTop_toTopOf="parent"
            />
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>